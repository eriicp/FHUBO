<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".CityLocationsActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvCityTitle"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/granate2"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/btn_back_city"
                style="@style/SettingsIconStyle"
                android:src="@drawable/outline_arrow_back_ios_new_24"
                android:background="@color/granate2"
                app:tint="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paris"
                android:fontFamily="@font/akira"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="24sp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!--
        ESTE ES EL CAMBIO PRINCIPAL.
        Se reemplaza el FrameLayout estático por un RecyclerView dinámico.
        El diseño del FrameLayout debe ir en el archivo del item (ej: recyclercitylocation.xml).
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCityLocations"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="12dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/cvCityTitle"
        app:layout_constraintBottom_toTopOf="@id/cvCityMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/recyclercitylocation" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvCityMenu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/granate2"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="-4dp"
            android:layout_marginTop="-4dp"
            >
            <ImageButton
                android:id="@+id/btnFilms"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/granate"
                app:cornerRadius="0dp"
                android:src="@drawable/clapper_board_svgrepo_com"
                app:tint="@color/white"
                style="@style/SettingsIconStyle"
                android:padding="20dp"
                android:layout_marginEnd="-3dp"
                />
            <ImageButton
                android:id="@+id/btnLocations"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/cherry"
                app:cornerRadius="0dp"
                android:src="@drawable/map_svgrepo_com"
                app:tint="@color/white"
                style="@style/SettingsIconStyle"
                android:padding="20dp"
                android:layout_marginEnd="-3dp"
                />
            <ImageButton
                android:id="@+id/btnFavorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/granate"
                app:cornerRadius="0dp"
                android:src="@drawable/star_svgrepo_com"
                app:tint="@color/white"
                style="@style/SettingsIconStyle"
                android:padding="20dp"
                android:layout_marginEnd="-3dp"
                />
            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/granate"
                app:cornerRadius="0dp"
                android:src="@drawable/profile_svgrepo_com"
                app:tint="@color/white"
                style="@style/SettingsIconStyle"
                android:padding="20dp"
                android:layout_marginEnd="-3dp"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

